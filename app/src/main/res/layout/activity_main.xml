<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="1"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp" />

    <TextView
        android:id="@+id/dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="2"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/satu"/>

    <TextView
        android:id="@+id/tiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="3"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/dua"/>

    <TextView
        android:id="@+id/empat"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="4"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/dua"
        android:layout_below="@+id/satu"/>

    <TextView
        android:id="@+id/enam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="6"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/empat"/>

    <TextView
        android:id="@+id/lima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F88A00F8"
        android:text="5"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="95dp"
        android:layout_below="@+id/empat"
        android:layout_toRightOf="@+id/enam" />

    <TextView
        android:id="@+id/tujuh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#F88A00F8"
        android:text="7"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lima"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="LILI REHMAWATI"
        android:textSize="20dp"
        android:padding="16dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tujuh"/>

</RelativeLayout>